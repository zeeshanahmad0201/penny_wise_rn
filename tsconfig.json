{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*"],
            "@constants/*": ["constants/*"],
            "@assets/*": ["assets/*"],
            "@typography/*": ["typography/*"],
            "@models/*": ["models/*"],
            "@data/*": ["data/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"]
}
